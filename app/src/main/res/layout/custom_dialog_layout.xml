<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="780px"
    android:layout_height="450px"
    android:layout_margin="20dp"
    android:background="@drawable/rounded_boarder"
    android:gravity="right|top"
    android:orientation="vertical"
    android:paddingVertical="24dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="10dp"
        android:text="Allow Weather App access to your location?"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="0dp"
        android:text="You can turn this feature on or off in Settings."
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        android:paddingBottom="0dp">

        <Button
            android:id="@+id/denyBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="Deny"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <Button
            android:id="@+id/acceptBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="Accept"
            android:textColor="@color/orange"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>